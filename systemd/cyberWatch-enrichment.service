[Unit]
Description=CyberWatch Enrichment Service
After=network.target postgresql.service redis-server.service neo4j.service
Wants=neo4j.service

[Service]
Type=simple
WorkingDirectory=@ROOT_DIR@
ExecStart=@ROOT_DIR@/.venv/bin/python -m cyberWatch.enrichment.run_enrichment
Restart=on-failure
EnvironmentFile=-/etc/cyberwatch/cyberwatch.env

[Install]
WantedBy=multi-user.target
